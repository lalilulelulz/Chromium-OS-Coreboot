config DRIVERS_INTEL_WIFI
	bool "Support Intel PCI-e WiFi adapters"
	depends on ARCH_X86
	default y if PCIEXP_PLUGIN_SUPPORT
	help
	   When enabled, add identifiers in ACPI and SMBIOS tables to
	   make OS drivers work with certain Intel PCI-e WiFi chipsets.

config ENABLE_WIFI_SSDT
  bool "Support for generating SSDT table"
  depends on DRIVERS_INTEL_WIFI
  default n
  help
     When enabled, populate Intel WiFi device info into SSDT instead of
     declaring in the DSDT of each main board.

config USE_SAR
	bool
	default n
	help
	  Enable it when wifi driver uses SAR configuration feature.
	  VPD entry "wifi_sar" is required to support it.

config SAR_ENABLE
	bool
	default n
	depends on USE_SAR

config DSAR_ENABLE
	bool
	default n
	depends on USE_SAR

config DSAR_SET_NUM
	hex "Number of SAR sets when D-SAR is enabled"
	default 0x3
	depends on USE_SAR
	help
	  There can be up to 3 optional SAR table sets.
